---
import BaseLayout from "./BaseLayout.astro";
import { Image } from "astro:assets";

// Get post data as a prop instead of fetching all posts
const { frontmatter } = Astro.props;
---
<BaseLayout pageTitle={frontmatter.title}>  
    <div class="flex justify-center">
        <div class="max-w-75vw sm:max-w-50vw">
            <h1 class="post-title">{frontmatter.title}</h1>
            <div>Written by <b>{frontmatter.author}</b></div>
            <div>
                Posted on {frontmatter.pubDate.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
            </div>
            <div class="mt-8"><em>{frontmatter.description}</em></div>
            <Image 
                class="my-4 w-full object-cover" 
                src={frontmatter.cover} 
                alt={frontmatter.coverAlt} 
                layout='constrained' 
                loading="eager" 
                inferSize 
            />
            <div class="flex gap-4">
                <div class="text-accent font-bold">
                    Tags:
                </div>
                {frontmatter.tags.map((tag: string) => (
                    <p>
                        <a class="link" href={`/tags/${tag}`}>{tag}</a>
                    </p>
                ))}
            </div>
            <article class="post-default">
                <slot />
            </article>
        </div>
    </div>
</BaseLayout>
